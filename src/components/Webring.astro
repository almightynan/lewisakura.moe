---
export interface Props {
	name: string;
	url: string;
}

const { name, url } = Astro.props;
---

<a href={url}>
	<img
		src={`/webrings/${name}`}
		alt={url}
		loading="lazy"
		decoding="async"
		width="88"
		height="31"
	/>
</a>

<style>
	a:hover {
		border-bottom: 0 !important;
	}
</style>
